{
  "name": "@nsxbet/playwright-orchestrator",
  "version": "0.7.0",
  "description": "Intelligent Playwright test distribution across CI shards using historical timing data",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      "reporter": [
        "./dist/reporter.d.ts"
      ],
      "fixture": [
        "./dist/fixture.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./reporter": {
      "types": "./dist/reporter.d.ts",
      "import": "./dist/reporter.js",
      "require": "./dist/reporter.js"
    },
    "./fixture": {
      "types": "./dist/fixture.d.ts",
      "import": "./dist/fixture.js",
      "require": "./dist/fixture.js"
    }
  },
  "bin": {
    "playwright-orchestrator": "./bin/run.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "oclif": {
    "bin": "playwright-orchestrator",
    "dirname": "playwright-orchestrator",
    "commands": "./dist/commands",
    "topicSeparator": " "
  },
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc -b --watch",
    "clean": "rm -rf dist",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "prepublishOnly": "bun run build",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "keywords": [
    "playwright",
    "testing",
    "sharding",
    "ci",
    "orchestrator",
    "parallel"
  ],
  "author": "NSXBet",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NSXBet/playwright-orchestrator.git"
  },
  "bugs": {
    "url": "https://github.com/NSXBet/playwright-orchestrator/issues"
  },
  "homepage": "https://github.com/NSXBet/playwright-orchestrator#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@oclif/core": "4.8.0",
    "glob": "11.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@playwright/test": "^1.40.0",
    "@types/node": "22.15.29",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "@playwright/test": ">=1.20.0"
  },
  "peerDependenciesMeta": {
    "@playwright/test": {
      "optional": true
    }
  }
}
